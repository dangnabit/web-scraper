<div class='article-list col-sm-12'>
  {{#each article}}
  <div class='article-wrapper col-md-6'>
    <div class='article' data-id={{_id}}>
      <h2 class='post-title'><a href={{link}}>{{title}}</a></h1>
  	  <h4>By: <a class='author' href={{authorLink}}>{{author}}</a></h4>
  	  <br> {{{excerpt}}}
  	</div>
  </div>
  {{/each}}
</div>

<div id='noteModal' class='modal fade' role='dialog'>
    <div class='modal-dialog'>
		<div class='modal-header'>
          <button type='button' class='close' data-dismiss='modal'>&times;</button>
          <h2 class='modal-title'><strong>Make a note!</strong></h2>
    </div>
    <div class='modal-body'>
      <div id='note'>
      </div>
    </div>
    <div class='modal-footer'>
      <button type='button' class='btn btn-danger' data-dismiss='modal'>Close</button>
    </div>
  </div>
</div>
</div>
